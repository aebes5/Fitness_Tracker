<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textMainMenu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/app_name"
            android:textSize="50sp"
            android:paddingTop="30dp"
            android:paddingBottom="40dp"
            android:layout_gravity="center"
            android:textColor="#263CB5"
            android:shadowColor="#F5A623"
            android:shadowDx="12"
            android:shadowDy="12"
            android:shadowRadius="8"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="3">

            <Button
                android:id="@+id/buttonWorkoutTracker"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textSize="18sp"
                android:text= "@string/workout_tracker"
                android:layout_margin="2dp"
                android:background="@drawable/round_button" />

            <Button
                android:id="@+id/buttonCalorieTracker"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textSize="18sp"
                android:text="@string/calorie_counter"
                android:layout_margin="2dp"
                android:background="@drawable/round_button" />

            <Button
                android:id="@+id/buttonSettings"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textSize="18sp"
                android:text="@string/settings"
                android:layout_margin="2dp"
                android:background="@drawable/round_button" />

        </LinearLayout >

        <TextView
            android:id="@+id/textViewWelcome"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Welcome, User!"
            android:textSize="30sp"
            android:textStyle="bold"
            android:layout_marginTop="40dp"
            android:layout_marginBottom="35dp"
            android:textAlignment="center"
            android:shadowColor="#A99FD6"
            android:shadowDx="6"
            android:shadowDy="6"
            android:shadowRadius="1"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/textViewWorkoutsThisWeek"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Workouts This Week: "
                android:textSize="22sp"
                android:layout_marginBottom="20dp"
                android:textStyle="bold"/>
            <TextView
                android:id="@+id/workoutsThisWeek"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="22sp"
                android:layout_marginBottom="20dp"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textViewCaloriesBurned"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:text="Calories Burned: "
                android:textSize="22sp"
                android:textStyle="bold"/>
            <TextView
                android:id="@+id/caloriesBurned"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:text=""
                android:textSize="22sp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textViewCaloriesGained"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Calories Gained: "
                android:textSize="22sp"
                android:textStyle="bold"/>
            <TextView
                android:id="@+id/caloriesGained"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="22sp" />
        </LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
